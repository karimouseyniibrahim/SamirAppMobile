<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:id="@+id/activity_main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding30"
    android:paddingRight="@dimen/padding30"
    app:context="com.pfe.samir.MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_8sdp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/padding25"
            android:paddingLeft="@dimen/padding25"
            android:paddingBottom="@dimen/_20dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/mangin10"
                android:layout_marginTop="@dimen/mangin10"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:src="@drawable/dzexpresslogo"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginBottom="@dimen/mangin10"
                android:layout_marginTop="@dimen/mangin10"
                android:orientation="horizontal"
                >
                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:bootstrapBrand="regular"
                    app:bootstrapText="{fa_user}"
                    />
                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/nfc_contents"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/username"
                    android:layout_weight="2"
                    app:bootstrapBrand="danger"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginBottom="@dimen/mangin10"
                android:layout_marginTop="@dimen/mangin10"
                android:orientation="horizontal"
                >
                <com.beardedhen.androidbootstrap.BootstrapLabel
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    app:bootstrapBrand="regular"
                    app:bootstrapText="{fa_lock}"
                    />
                <com.beardedhen.androidbootstrap.BootstrapEditText
                    android:id="@+id/edit_message"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:hint="@string/pwd"
                    android:layout_weight="2"
                    app:bootstrapBrand="danger"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40dp"
                android:layout_marginBottom="@dimen/mangin10"
                android:gravity="right"
                android:orientation="horizontal"
                >
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/forgetpwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:bootstrapBrand="warning"
                    app:bootstrapSize="xs"
                    app:bootstrapText="@string/forgetpwd"
                    app:roundedCorners="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/button"
                    style="@style/home_button"
                    android:layout_height="match_parent"
                    android:text="@string/write"
                    app:bootstrapBrand="regular"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <com.beardedhen.androidbootstrap.BootstrapButton
                    android:id="@+id/read"
                    style="@style/home_button"
                    android:layout_height="match_parent"
                    android:text="@string/read"
                    app:bootstrapBrand="regular"
                    android:onClick="readtags"
                    />
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
